<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/montserrat_bold_1"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="NHẬP THỦ CÔNG"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTextPersonalNb"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/montserrat_1"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/bg_ads"
        android:hint="Mã số cá nhân (vd:098007297)"
        android:inputType="number"
        android:paddingStart="@dimen/_10sdp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/edTextBirthdate"
        app:layout_constraintEnd_toEndOf="@+id/edTextExpirationDate"
        app:layout_constraintStart_toStartOf="@+id/edTextExpirationDate"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:background="@drawable/bg_ads"
        android:id="@+id/edTextBirthdate"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:paddingStart="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Ngày sinh (vd:980711)"
        android:inputType="number"
        android:fontFamily="@font/montserrat_1"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintBottom_toTopOf="@+id/edTextExpirationDate"
        app:layout_constraintEnd_toEndOf="@+id/edTextExpirationDate"
        app:layout_constraintStart_toStartOf="@+id/edTextExpirationDate" />

    <EditText
        android:id="@+id/edTextExpirationDate"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/bg_ads"
        android:hint="Ngày hết hạn (vd:230711)"
        android:inputType="number"
        android:paddingStart="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_1"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button_xac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_xac"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/bg_item_main"
        android:text="Xác Nhận"
        android:fontFamily="@font/montserrat_bold_1"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>