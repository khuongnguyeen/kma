<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@drawable/bg_ads"
        app:layout_constraintBottom_toTopOf="@+id/cl_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bg_item_main"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:text="Manual input" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Personal number:"
            app:layout_constraintEnd_toEndOf="@+id/edTextPersonalNb"
            app:layout_constraintStart_toStartOf="@+id/edTextPersonalNb"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

        <EditText
            android:id="@+id/edTextPersonalNb"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hint="e.g. 098007297"
            android:inputType="number"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Birthdate:"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="@+id/edTextPersonalNb"
            app:layout_constraintStart_toStartOf="@+id/edTextPersonalNb"
            app:layout_constraintTop_toBottomOf="@+id/edTextPersonalNb" />

        <EditText
            android:id="@+id/edTextBirthdate"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hint="e.g. 980711"
            android:inputType="number"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/edTextPersonalNb"
            app:layout_constraintStart_toStartOf="@+id/edTextPersonalNb"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Expiration date:"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="@+id/edTextPersonalNb"
            app:layout_constraintStart_toStartOf="@+id/edTextPersonalNb"
            app:layout_constraintTop_toBottomOf="@+id/edTextBirthdate" />

        <EditText
            android:id="@+id/edTextExpirationDate"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hint="e.g. 230711"
            android:inputType="number"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/edTextBirthdate"
            app:layout_constraintStart_toStartOf="@+id/edTextBirthdate"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_25sdp"
            android:background="@drawable/bg_button_start"
            android:text="Confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edTextExpirationDate"
            app:layout_constraintVertical_bias="0.353" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>