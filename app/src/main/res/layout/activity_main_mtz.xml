<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MtzActivity">

    <Button
        android:id="@+id/btOCR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="onOcrRecognizeClick"
        android:text="OCR Recognize"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onReadButtonClick"
        android:text="Read Document"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTextPersonalNb"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:hint="Personal number"
        android:inputType="text"
        android:text="098007297"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTextBirthdate"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:hint="Birthdate"
        android:inputType="number"
        android:text="751001"
        app:layout_constraintEnd_toEndOf="@+id/edTextPersonalNb"
        app:layout_constraintStart_toStartOf="@+id/edTextPersonalNb"
        app:layout_constraintTop_toBottomOf="@+id/edTextPersonalNb" />

    <EditText
        android:id="@+id/edTextExpirationDate"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:hint="Expiration date"
        android:inputType="number"
        android:text="280427"
        app:layout_constraintEnd_toEndOf="@+id/edTextBirthdate"
        app:layout_constraintStart_toStartOf="@+id/edTextBirthdate"
        app:layout_constraintTop_toBottomOf="@+id/edTextBirthdate" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="141dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/btOCR"
        app:layout_constraintStart_toStartOf="@+id/btOCR"
        app:layout_constraintTop_toBottomOf="@+id/btOCR" />

</androidx.constraintlayout.widget.ConstraintLayout>